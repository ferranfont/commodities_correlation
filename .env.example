# Commodities Correlation Analysis - Environment Variables Template
# Copy this file to .env and fill in your actual values
# This file is safe to commit to GitHub

# ==============================================================================
# PROJECT CONFIGURATION
# ==============================================================================
PROJECT_NAME=commodities_correlation
PROJECT_VERSION=1.0.0
ENVIRONMENT=development

# ==============================================================================
# DATA SETTINGS
# ==============================================================================
DATA_PERIOD=20y
DATA_INTERVAL=1d
DATA_FOLDER=data
CHARTS_FOLDER=charts
OUTPUTS_FOLDER=outputs

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
# Yahoo Finance (free version doesn't need API key)
YAHOO_FINANCE_API_KEY=not_required_for_free_version
YAHOO_FINANCE_BASE_URL=https://query1.finance.yahoo.com

# Alternative data providers (optional)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
# QUANDL_API_KEY=your_quandl_key_here
# IEX_CLOUD_API_KEY=your_iex_cloud_key_here

# ==============================================================================
# TRADING SETTINGS
# ==============================================================================
ACTIVE_SYMBOLS=CL=F,^IXIC,GC=F,EURUSD=X
EXCLUDED_SYMBOLS=SI=F,HG=F
CORRELATION_WINDOW=252
MIN_CORRELATION_THRESHOLD=0.3
MAX_CORRELATION_THRESHOLD=0.8

# ==============================================================================
# CHART CONFIGURATION
# ==============================================================================
CHART_THEME=plotly_dark
CHART_HEIGHT=600
CHART_WIDTH=1000
AUTO_OPEN_BROWSER=true

# ==============================================================================
# DATABASE SETTINGS (future use)
# ==============================================================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=commodities_trading
# DB_USER=your_username
# DB_PASSWORD=your_secure_password

# ==============================================================================
# NOTIFICATION SETTINGS (future use)
# ==============================================================================
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your_email@example.com
# EMAIL_PASSWORD=your_app_password
# EMAIL_RECIPIENTS=recipient@example.com

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================
MAX_WORKERS=4
CACHE_ENABLED=true
CACHE_TTL=3600
LOG_LEVEL=INFO

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
SECRET_KEY=change_this_to_a_random_secret_key
JWT_SECRET=change_this_to_a_random_jwt_secret

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================
DEBUG=true
VERBOSE_LOGGING=false
ENABLE_PROFILING=false
TEST_MODE=false
MOCK_DATA=false
SKIP_WEEKENDS=true